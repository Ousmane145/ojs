<?xml version="1.0"?>
<ruleset name="SantaneAnalysisPlugin">
    <description>PSR12 check for premium Submission Helper</description>
    <rule ref="PSR12"/>
    
    <!-- Check these files -->
    <file>plugins/generic/premiumSubmissionHelperPlugin</file>
    
    <!-- Ignore these paths -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    
    <arg name="extensions" value="php"/>
    <arg name="report" value="full"/>
</ruleset>